<!-- Progress bar -->
<div class="progress" role="progressbar" aria-label="Default striped example" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
  <div class="progress-bar" style="width: 33.33%"></div>
</div>
<!-- Main content -->
<div class="main-content onboarding">
  <%= simple_form_for(@group) do |f| %>
    <%= f.input :title, label: "What's the title of your group?" %>
    <%= f.input :date_of_outing, label: "When do you wanna go out?", as: :string, input_html: { data: { controller: "datepicker" }} %>
    <%= f.input :time_of_outing, label: "At what time?", as: :string, input_html: { data: { controller: "timepicker" }} %>
    <%= f.submit "Create Group", class: "btn btn-primary"%>
  <% end %>
</div>
